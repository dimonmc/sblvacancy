<h1>Products</h1>

<table width="100%">
  <thead>
    <tr>
      <th width="150px" style="border-bottom: 1px solid gray;">Product</th>
      <th  style="border-bottom: 1px solid gray;">Description</th>
      <th style="border-bottom: 1px solid gray;"></th>
<!--<% if (current_user.name == 'bizlogic') %>      -->
<th style="border-bottom: 1px solid gray;"></th>
      <th style="border-bottom: 1px solid gray;"></th>
<!--<% end %>-->
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td style="border-bottom: 1px solid lightgray;"><%= micropost.content %></td>
        <td style="border-bottom: 1px solid lightgray;"><%= micropost.shortdesc.html_safe %></td>
        <td style="border-bottom: 1px solid lightgray;"><%= link_to 'Show', micropost %></td>
<!--<% if (current_user.name == 'bizlogic') %>      -->
        <td style="border-bottom: 1px solid lightgray;"><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
       	<td style="border-bottom: 1px solid lightgray;"><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<!--<% end %>-->
      </tr>
    <% end %>
  </tbody>
</table>

<% if (current_user.name == 'bizlogic') %>
	<%= link_to 'New Micropost', new_micropost_path %>
<% end %>
